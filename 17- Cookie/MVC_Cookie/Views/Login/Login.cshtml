
@{
    ViewBag.Title = "Login";
}

@model MVC_Cookie.Models.UserVM
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-centered" style="margin-top:10%">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <img id="superMan" style="*max-height:60px;max-height:60px;*max-width:100%;max-width:100%;margin:15px 0;" src="~/Content/Images/superman.png" alt="Bilge Adam">
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <form class="form-horizontal" method="post" action="">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

                                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @style = "outline: 0!important;box-shadow: none!important; min-width:100%", id = "userName", place_holder = "Kullanıcı Adı Giriniz" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @style = "outline: 0!important;box-shadow: none!important; min-width:100%", id = "password", place_holder = "Şifrenizi Giriniz", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="has-success"> <div class="checkbox"> <label> <input type="checkbox" id="remember" name="Remember" value="true">Beni Hatırla</label> </div> </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success btn-block" value="Giriş Yap" style="min-width:100%">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 