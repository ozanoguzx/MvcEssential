
@{
    ViewBag.Title = "Index";
}

<h2>Kullanıcı Girişi Yapınız</h2>

<div class="row col-xs-6" style="top:50%; left:25%;">
    <div class="panel panel-default">
        <div class="panel-body">
            <form method="post" action="/Login/UserLogin">
                <div class="col-lg-12">
                    <div class="form-group">
                        Kullanıcı Adı
                        <div class="form-group">
                            <input type="text" name="UserName" class="form-control" style="min-width:100%" />
                        </div>
                    </div>
                    <div class="form-group">
                        Şifre
                        <div class="form-group">
                            <input type="text" name="Password" class="form-control" style="min-width:100%" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Giriş Yap</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>