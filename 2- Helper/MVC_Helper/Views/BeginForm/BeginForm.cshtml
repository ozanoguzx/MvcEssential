@{
    ViewBag.Title = "BeginForm";
}
<!--
    Html.BeginForm() => Html'deki form etiketinin karşılığıdır.
-->
<!----------------------------------------------------------------------------------------->
<!--1. Kullanım

    NOT : 1. Kullanım'da bağlı bulunduğu Action ve Controller üzerinden haraket eder.
-->
@using (Html.BeginForm())
{
    <input type="submit" value="Postback Yap" />
}

<!--
    Sayfa Çıktısı

<form action="/BeginForm/BeginForm" method="post">
    <input type="submit" value="Postback Yap" />
</form>
-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--2. Kullanım
    2. Kullanım Parametreleri;
       1) Url üzerinden parametre olarak id gönderimek istenirse  " new { id = 1 } " eğer id parametresi gönderilmeyecek ise " null " olarak işaretlenmelidir.

    NOT : 2. Kullanım'da bağlı bulunduğu Action ve Controller üzerinden haraket eder.
-->
@using (Html.BeginForm(new { id = 1 }))
{
    <input type="submit" value="Postback Yap" />
}

<!--
    Sayfa Çıktısı

<form action="/BeginForm/BeginForm/1" method="post">
   <input type="submit" value="Postback Yap" />
</form>

-->
<!----------------------------------------------------------------------------------------->
<hr />

<!----------------------------------------------------------------------------------------->
<!--3. Kullanım
    3. Kullanım Parametreleri;
       1) Link'e tıklandığı zaman "URL" üzerinden bir veya birden fazla parametre gönderilecek ise, "RouteValueDictionary" içerisinde işlemler gerçekleştirilebilir.

-->
@using (Html.BeginForm(new RouteValueDictionary(new { id = 1 })))
{
    <input type="submit" value="Postback Yap" />
}

<!--
    Sayfa Çıktısı

<form action="/BeginForm/BeginForm/1" method="post">
   <input type="submit" value="Postback Yap" />
</form>

-->
<!----------------------------------------------------------------------------------------->
<hr />

<!----------------------------------------------------------------------------------------->
<!--4. Kullanım
    4. Kullanım Parametreleri;
       1) Post işlemi gerçekleştiğinde Hangi Action'a Gidecek ise Action Adı
       2) Post işlemi sırasında Action Başka bir Conroller içerisinde ise Controller Name

-->
@using (Html.BeginForm("PostAction", "BeginForm"))
{
    <input type="submit" value="Postback Yap" />
}

<!--
    Sayfa Çıktısı

<form action="/BeginForm/PostAction" method="post">
    <input type="submit" value="Postback Yap" />
</form>
-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--5. Kullanım
    5. Kullanım Parametreleri;
       1) Post işlemi gerçekleştiğinde Hangi Action'a Gidecek ise Action Adı
       2) Post işlemi sırasında Action Başka bir Conroller içerisinde ise Controller Name
       3) Form metotlarından "POST" yada "GET" metotları seçilir.

-->
@using (Html.BeginForm("PostAction", "BeginForm", FormMethod.Post))
{
    <input type="submit" value="Postback Yap" />
}

<!--
    Sayfa Çıktısı

<form action="/BeginForm/PostAction" method="post">
    <input type="submit" value="Postback Yap" />
</form>
-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--6. Kullanım
    6. Kullanım Parametreleri;
       1) Post işlemi gerçekleştiğinde Hangi Action'a Gidecek ise Action Adı
       2) Post işlemi sırasında Action Başka bir Conroller içerisinde ise Controller Name
       3) Html Attribute'leri tanımlamak için gerekli alanı kullanabilirsiniz.
-->
@using (Html.BeginForm("PostAction", "BeginForm", new { @class = "form-horizontal" }))
