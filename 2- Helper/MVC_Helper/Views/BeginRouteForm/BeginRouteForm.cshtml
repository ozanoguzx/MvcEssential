@{
    ViewBag.Title = "BeginRouteForm";
}

@model MVC_Helper.Models.RouteUrl
@{
    ViewBag.Title = "BeginRouteForm";
}
<!--

     Html.BeginRouteForm() metodu, RouteConfig içerisinde custom olarak hazıladığınız Route'lar üzerinden sayfalara ulaşmanızı sağlar.

    Örnek Route için App_Start içerisindeki RouteConfig class'ını inceleyiniz.
-->
<!----------------------------------------------------------------------------------------->
<!--1. Kullanım
    1. Kullanım Parametreleri;
       1) Object olarak parametre alır, Model içerisinde var olan bir Route ismi verilebilir.

-->
@using (Html.BeginRouteForm(@Model.RouteName))
{
    <input type="submit" value="Postaback" />
}
<!--
    Sayfa Çıktısı
<form action="/Deneme/Index" method="post">
    <input type="submit" value="Postaback" />
</form>

-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--2. Kullanım
    2. Kullanım Parametreleri;
       1) Yapı içerisinde bir Route tanımlamak RouteValueDictionary yapısını kullanabilirsiniz.

-->
@using (Html.BeginRouteForm(new RouteValueDictionary(new { id = 1, controller = "Deneme", action = "Index" })))
{
    <input type="submit" value="Postaback" />
}
<!--
    Sayfa Çıktısı

<form action="/Deneme/Index/1" method="post">
    <input type="submit" value="Postaback" />
</form>
-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--3. Kullanım
    3. Kullanım Parametreleri;
       1) string olarak RouteConfig içerisinde tanımlı olan bir Parametre ister.

-->
@using (Html.BeginRouteForm("DefaultRaw"))
{
    <input type="submit" value="Postaback" />
}
<!--
    Sayfa Çıktısı
<form action="/Raw/Raw" method="post">
    <input type="submit" value="Postaback" />
</form>

-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--4. Kullanım
    4. Kullanım Parametreleri;
       1) string olarak RouteConfig içerisinde tanımlı olan bir Parametre ister.
       2) Submit'e tıklandığında Gittiği Url üzerindeki Action'ın Get yada Post Halini çalıştırmak için sizden parametre ister.
-->
@using (Html.BeginRouteForm("DefaultDeneme", FormMethod.Post))
{
    <input type="submit" value="Postaback" />
}
<!--
    Sayfa Çıktısı

<form action="/Deneme/Index/1" method="post">
    <input type="submit" value="Postaback" />
</form>
-->
<!----------------------------------------------------------------------------------------->
<hr />
<!----------------------------------------------------------------------------------------->
<!--5. Kullanım
    5. Kullanım Parametreleri;
       1) string olarak RouteConfig içerisinde tanımlı olan bir Parametre ister.
       2) Url üzerinden parametre olarak id gönderimek istenirse  " new { id = 1 } " eğer id parametresi gönderilmeyecek ise " null " olarak işaretlenmelidir.
-->
@using (Html.BeginRouteForm("DefaultDeneme", new { id = 1 }))
{
    <input type="submit" value="Postaback" />
}
<!--
    Sayfa Çıktısı

