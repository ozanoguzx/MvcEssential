@{
    ViewBag.Title = "CheckBoxFor";
}
@model MVC_Helper.Models.Personel
@section stil{
    <style type="text/css">
        .renk {
            color: red;
        }
    </style>
}

<!----------------------------------------------------------------------------------------->
<!--1. Kullanım
    1. Kullanım Parametreleri;
       1) "id" ve "name" atribute değerleri için parametre

    NOT : value tiplerde eğer değer Nullable değil ise   data-val-required="The Cinsiyet field is required."   parametresini ilgili kontrole otomatil olarak atayacaktır.
-->
Erkek : @Html.CheckBoxFor(x => x.Cinsiyet)

<!--Sayfa Çıktısı

<input id="Cinsiyet" name="Cinsiyet" type="checkbox" value="true" /><input name="Cinsiyet" type="hidden" value="false" />

<input data-val="true" data-val-required="The Cinsiyet field is required." id="Cinsiyet" name="Cinsiyet" type="checkbox" value="true" /><input name="Cinsiyet" type="hidden" value="false" />

    -->
<!----------------------------------------------------------------------------------------->
<hr />

<!----------------------------------------------------------------------------------------->
<!--2. Kullanım
    2. Kullanım Parametreleri;
       1) "id" ve "name" atribute değerleri için parametre
       2) Html Atribute değerlerini belirleyebilmeniz için gerekli alan

-->
Erkek : @Html.CheckBoxFor(x => x.Cinsiyet, new { @style = "margin:100px" })

<!--Sayfa Çıktısı

<input id="Cinsiyet" name="Cinsiyet" style="margin:100px" type="checkbox" value="true" /><input name="Cinsiyet" type="hidden" value="false" />

    -->
<!----------------------------------------------------------------------------------------->
<hr />

<!----------------------------------------------------------------------------------------->
<!--3. Kullanım
    3. Kullanım Parametreleri;
       1) "id" ve "name" atribute değerleri için parametre
       2) Birden fazla Attribute değeri verebilmeniz için Dictionary olarak bir dizi ister

-->
Erkek : @Html.CheckBoxFor(x => x.Cinsiyet, new Dictionary<string, object>() { { "id", "cinsiyet" }, { "class", "renk" } })

<!--Sayfa Çıktısı

<input id="Cinsiyet" name="Cinsiyet" style="margin:100px" type="checkbox" value="true" /><input name="Cinsiyet" type="hidden" value="false" />

    -->
<!----------------------------------------------------------------------------------------->
