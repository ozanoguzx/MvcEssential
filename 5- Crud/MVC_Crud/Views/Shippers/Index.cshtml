
@{
    ViewBag.Title = "Index";
}
@model ICollection<MVC_Crud.Models.Shipper>
<div class="row" style="margin-top:50px">
    <h2>Kargo Listesi</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Id</td>
                    <td>Kargo Adı</td>
                    <td>Telefon</td>
                    <td></td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ShipperID</td>
                        <td>@item.CompanyName</td>
                        <td>@item.Phone</td>
                        <td><a href="Edit/@item.ShipperID">Edit</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

