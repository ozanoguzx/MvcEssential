
@{
    ViewBag.Title = "Edit";
}
@model MVC_Crud.Models.Shipper
<div class="row" style="margin-top:50px">
    <h2>Kargo Düzenle</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <form method="post">z
                @Html.HiddenFor(x => x.ShipperID)
                <label>Kargo Adı</label>
                @Html.EditorFor(x => x.CompanyName, new { htmlAttributes = new { @class = "form-control", @style = "min-width:100%" } })
                <br />
                <label>Telefon</label>
                @Html.EditorFor(x => x.Phone, new { htmlAttributes = new { @class = "form-control", @style = "min-width:100%" } })
                <br />
                <input type="submit" name="name" value="Kaydet" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>
